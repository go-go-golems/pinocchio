    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pinocchio Test",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/pinocchio",
            "args": ["examples", "test"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PINOCCHIO_PROFILE": "haiku"
            }
        },
        {
            "name": "Pinocchio Test output yaml",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/pinocchio",
            "args": ["examples", "test", "--output", "yaml", "--non-interactive", "--with-metadata"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PINOCCHIO_PROFILE": "haiku"
            }
        },
        {
            "name": "Pinocchio Test 0",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/pinocchio",
            "args": ["examples", "test", "--ai-max-response-tokens", "0"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PINOCCHIO_PROFILE": "haiku"
            }
        }

    ]
}