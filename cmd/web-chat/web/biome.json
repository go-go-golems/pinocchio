{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "src/**",
      "vite.config.ts",
      "!!**/src/sem/pb",
      "!!**/storybook-static"
    ]
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noArrayIndexKey": "off",
        "noEmptyBlockStatements": "off",
        "noExplicitAny": "off",
        "noShadowRestrictedNames": "off"
      },
      "a11y": {
        "noLabelWithoutControl": "off",
        "noStaticElementInteractions": "off",
        "useButtonType": "off",
        "useKeyWithClickEvents": "off"
      },
      "correctness": {
        "noUnsafeOptionalChaining": "off",
        "noUnusedFunctionParameters": "off",
        "useExhaustiveDependencies": "warn"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["src/debug-ui/**"],
      "linter": {
        "rules": {
          "a11y": {
            "noLabelWithoutControl": "off",
            "noStaticElementInteractions": "off",
            "useButtonType": "off",
            "useKeyWithClickEvents": "off"
          },
          "correctness": {
            "noUnsafeOptionalChaining": "off",
            "noUnusedFunctionParameters": "off"
          },
          "style": {
            "noNonNullAssertion": "off"
          },
          "suspicious": {
            "noArrayIndexKey": "off",
            "noEmptyBlockStatements": "off",
            "noShadowRestrictedNames": "off"
          }
        }
      }
    }
  ]
}
