{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "src/**",
      "vite.config.ts",
      "!!**/src/sem/pb",
      "!!**/storybook-static"
    ]
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noEmptyBlockStatements": "error",
        "noExplicitAny": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn"
      }
    }
  }
}
